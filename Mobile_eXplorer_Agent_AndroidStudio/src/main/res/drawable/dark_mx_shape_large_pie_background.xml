<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape
            android:innerRadius="80dp"
            android:shape="ring"
            android:thickness="45dp"
            android:useLevel="false">
            <solid android:color="@color/dark_mx_hotspot_fill"/>

        </shape>
    </item>
    <item
        android:bottom="45dp"
        android:left="45dp"
        android:right="45dp"
        android:top="45dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/dark_mx_hotspot_stroke"/>
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/dark_mx_hotspot_stroke"/>
        </shape>
    </item>

</layer-list>