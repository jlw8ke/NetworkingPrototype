    <!--drag sort listview-->
    <declare-styleable name="MXDragSortListView">
        <attr name="mx_collapsed_height" format="dimension"/>
        <attr name="mx_drag_scroll_start" format="float"/>
        <attr name="mx_max_drag_scroll_speed" format="float"/>
        <attr name="mx_float_background_color" format="color"/>
        <attr name="mx_remove_mode">
            <enum name="mx_clickRemove" value="0"/>
            <enum name="mx_flingRemove" value="1"/>
        </attr>
        <attr name="mx_track_drag_sort" format="boolean"/>
        <attr name="mx_float_alpha" format="float"/>
        <attr name="mx_slide_shuffle_speed" format="float"/>
        <attr name="mx_remove_animation_duration" format="integer"/>
        <attr name="mx_drop_animation_duration" format="integer"/>
        <attr name="mx_drag_enabled" format="boolean"/>
        <attr name="mx_sort_enabled" format="boolean"/>
        <attr name="mx_remove_enabled" format="boolean"/>
        <attr name="mx_drag_start_mode">
            <enum name="mx_onDown" value="0"/>
            <enum name="mx_onMove" value="1"/>
            <enum name="mx_onLongPress" value="2"/>
        </attr>
        <attr name="mx_drag_handle_id" format="integer"/>
        <attr name="mx_fling_handle_id" format="integer"/>
        <attr name="mx_click_remove_id" format="integer"/>
        <attr name="mx_use_default_controller" format="boolean"/>
    </declare-styleable>

